{
  "name": "playwright-e2e-framework",
  "version": "1.0.0",
  "description": "Production-grade Playwright E2E Test Automation Framework with POM, API Testing, Visual Regression & CI/CD",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:safari": "npx playwright test --project=webkit",
    "test:api": "npx playwright test --project=api",
    "test:smoke": "npx playwright test --grep @smoke",
    "test:regression": "npx playwright test --grep @regression",
    "test:visual": "npx playwright test --grep @visual",
    "report": "npx playwright show-report",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "e2e",
    "automation",
    "testing",
    "page-object-model",
    "api-testing",
    "visual-regression"
  ],
  "author": "danieldf9",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "dotenv": "^16.4.0"
  }
}
